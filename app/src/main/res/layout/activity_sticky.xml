<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".floating.StickyActivity">






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="visible" />

    <TextView
        android:id="@+id/select_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/type_layout"
        app:layout_constraintBottom_toBottomOf="@+id/type_layout"
        android:background="@color/colorAccent"
        app:layout_constraintRight_toLeftOf="@+id/type_layout"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:alpha="0"
        android:visibility="visible" />

    <com.yushi.recyclerviewitemdecoration.SortDecorationLayout
        android:id="@+id/type_layout"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:isPreview="false">



    </com.yushi.recyclerviewitemdecoration.SortDecorationLayout>

</androidx.constraintlayout.widget.ConstraintLayout>